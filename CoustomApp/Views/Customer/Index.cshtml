@model CoustomApp.Models.Customer;
@{
    ViewData["Title"] = "Customer Page";
}


<div class="text-center">
    <h1 class="display-4">Welcome To Customer Page</h1>
</div>

<hr />

<form method="post" style="margin-left:10px">
    <div >
        <div>
            <h3>Custmor Details</h3>
        </div>
        <br />
        <div>
            <label>Name</label>
            <input type="text" class="form-control" asp-for="Name" style="width:200px"/>
        </div>
        <div>
            <label>Age</label>
            <input type="text" class="form-control" asp-for="Age" style="width:200px"/>
        </div>
        <div>
            <label>Address</label>
            <input type="text" class="form-control" asp-for="Address" style="width:200px"/>
        </div>
        <div>
            <label>Phone</label>
            <input type="text" class="form-control" asp-for="Phone" style="width:200px"/>
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Save</button>

</form>